  try {
    const response = await fetch(`http://localhost:8080/dish/1`);
    if (!response.ok) {
      throw new Error(`HTTP error! Status: ${response.status}`);
    }

    const blob = await response.blob();
    const url = URL.createObjectURL(blob);
