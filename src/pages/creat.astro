---
import Layout from "../components/Layout.astro";
const dishes = [
  { name: 'Dish 1', imageSrc: 'https://video.kurashiru.com/production/recipe_card_contents/image_src_file/5804908/large_image_original.jpg' },
  { name: 'Dish 2', imageSrc: 'https://video.kurashiru.com/production/recipe_card_contents/image_src_file/5804908/large_image_original.jpg' },
  { name: 'Dish 1', imageSrc: 'https://video.kurashiru.com/production/recipe_card_contents/image_src_file/5804908/large_image_original.jpg' },
  { name: 'Dish 2', imageSrc: 'https://video.kurashiru.com/production/recipe_card_contents/image_src_file/5804908/large_image_original.jpg' },
  { name: 'Dish 1', imageSrc: 'https://video.kurashiru.com/production/recipe_card_contents/image_src_file/5804908/large_image_original.jpg' },
  { name: 'Dish 2', imageSrc: 'https://video.kurashiru.com/production/recipe_card_contents/image_src_file/5804908/large_image_original.jpg' },
  // ...他の料理データ
];
---

<Layout>
  <div class="input-area">
    <h2>どんな料理を想像していますか？</h2>
    <p>イメージを入力してください</p>
    <input type="text" placeholder="料理名を入力" />
    <button type="button">生成する →</button>
  </div>

  <article>
    <div class="dish-grid">
      {dishes.map(dish => (
          <div class="dish">
          <img src={dish.imageSrc} alt={dish.name} />
          <div class="dish-name">{dish.name}</div>
          </div>
      ))}
    </div>
  </article>

  <style>
    body {
      font-family: 'Roboto', sans-serif; /* モダンなフォントを使用 */
      background-color: #fffff0; /* 薄いオレンジ色の背景 */
      color: #333; /* 濃い文字色 */
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    article {
          max-width: 1100px;
          margin: 40px auto;
          padding: 40px;
          background-color: #FFFFFF; /* 記事は白背景 */
          border-radius: 10px;
          box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }


    .input-area {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 50px;
      background-color: #FFF; /* 背景色白 */
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      margin: 100px auto; /* ページ中央に配置 */
      width: 80%; /* 幅を適切に設定 */
      max-width: 1100px; /* 最大幅を設定 */
    }

    h2 {
      color: #333;
      font-size: 1.5rem;
      text-align: center;
      margin-bottom: 20px;
    }

    p {
      text-align: center;
      margin-bottom: 30px;
      color: #666;
    }

    input[type="text"] {
      width: 100%;
      padding: 15px;
      margin-bottom: 20px;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box; /* 入力フィールドの内側にパディングを含める */
    }

    button {
      padding: 15px 30px;
      background-color: #007BFF;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 1rem;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #0056b3;
    }


    .dish-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 30px;
        margin-bottom: 50px;
    }

    .dish {
        border: 1px solid #e0e0e0;
        border-radius: 15px;
        overflow: hidden;
        transition: box-shadow 0.3s;
    }

    .dish img {
        width: 100%;
        height: auto;
        display: block;
        transition: transform 0.3s;
    }

    .dish:hover {
        box-shadow: 0px 4px 8px rgba(0,0,0,0.1);
    }

    .dish-name {
        padding: 10px;
        text-align: center;
        background-color: #ffffff;
        font-size: 18px;
        font-family: 'Helvetica Neue', sans-serif;
    }

    @media (max-width: 768px) {
        .dish-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 480px) {
        .dish-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
  </style>
</Layout>
