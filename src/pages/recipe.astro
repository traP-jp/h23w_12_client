  ingredient: [
    "カンガルー肉 200g（ステーキ用）",
    "じゃがいも 2個（細切り）",
    "レッドビーツ 1個（スライス）",
    "ブロッコリー 100g",
    "オーストリア産ホワイトアスパラガス 100g",
    "パンプキンシード 10g",
  ],
  seasoning: [
    "オリーブオイル 大さじ2",
    "りんご酢 大さじ1",
    "粒マスタード 小さじ1",
    "塩 適量",
    "黒こしょう 適量",
    "ドライタイム 小さじ1/2",
  ],
  instruction: [
    "カンガルー肉は塩、こしょう、ドライタイムで下味をつけておく。",
    "じゃがいもは細切りにして、180度の油でカリカリになるまで揚げる。",
